from selenium import webdriver
import subprocess

# Créer un objet WebDriver pour Chrome
driver = webdriver.Chrome()

# Ouvrir la page HTML à convertir
driver.get('https://www.example.com')

# Sauvegarder le HTML dans un fichier temporaire
temp_file = 'temp.html'
with open(temp_file, 'w', encoding='utf-8') as f:
    f.write(driver.page_source)

# Appeler wkhtmltopdf pour convertir le fichier HTML en PDF
pdf_file = 'out.pdf'
subprocess.run(['wkhtmltopdf', temp_file, pdf_file])

# Fermer le WebDriver
driver.quit()
