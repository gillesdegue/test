from selenium import webdriver
from selenium.webdriver.chrome.service import Service
from webdriver_manager.chrome import ChromeDriverManager
from selenium.webdriver.common.by import By
from selenium.webdriver.chrome.options import Options

# Chemin vers votre driver Chrome
webdriver_path = '/chemin/vers/votre/driver/chrome'

# Créer une instance de Options
chrome_options = Options()

# Ajouter l'option pour activer le mode sans tête
chrome_options.add_argument("--headless")

# Ajouter l'option pour définir le chemin de sortie du PDF
chrome_options.add_argument("--print-to-pdf=/chemin/vers/votre/fichier.pdf")

# Créer une instance de Service
service = Service(webdriver_path)

# Créer une instance de WebDriver
driver = webdriver.Chrome(service=service, options=chrome_options)

# Ouvrir la page locale
driver.get('file:///chemin/vers/votre/page.html')

# Fermer le WebDriver
driver.quit()
